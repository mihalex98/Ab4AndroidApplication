<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ab4application.mihai.stackoverflowinformation.DeveloperActivity"
    tools:showIn="@layout/activity_developer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/devName"
            android:layout_width="164dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/devImage"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="46dp"
            android:layout_toEndOf="@+id/devImage"
            android:layout_toRightOf="@+id/devImage"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="89dp" />

        <ImageView
            android:id="@+id/devImage"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="48dp"
            android:contentDescription="@string/dev_avatar"
            app:srcCompat="@color/colorPrimary"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="45dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/devImage"
            android:layout_alignRight="@+id/devImage"
            android:layout_below="@+id/devImage"
            android:layout_marginTop="128dp"
            app:srcCompat="@drawable/gold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/devImage"
            android:layout_alignRight="@+id/devImage"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="64dp"
            app:srcCompat="@drawable/silver" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/devImage"
            android:layout_alignRight="@+id/devImage"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="64dp"
            app:srcCompat="@drawable/bronze" />

        <TextView
            android:id="@+id/textGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView4"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textBronze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView6"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textSilver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView6"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/devImage"
            android:layout_alignRight="@+id/devImage"
            android:layout_below="@+id/devImage"
            android:layout_marginTop="52dp"
            android:textSize="20sp"
            android:textColor="@color/cardview_dark_background"
            android:text="Location: " />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textView3"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="location"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
